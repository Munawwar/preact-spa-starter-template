{
  "name": "preact-spa-template",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bash -c \"node server.js\"",
    "prod": "NODE_ENV=production HTTP2=true bash -c \"node server.js\"",
    "//dev-prod-comment": "we are explicitly using bash as npm uses `sh` internally which on debian may swallow signals like SIGTERM - https://github.com/npm/cli/issues/6684#issuecomment-2567262280",

    "build": "vite build",
    "preview": "vite build && npx --package=local-web-server@5.4.0 ws -p 5173 -d dist --http2",
    "lint": "eslint --ext js,jsx src/ tests/ && prettier --check src/ tests/",
    "lint-fix": "eslint --fix --ext js,jsx src/ tests/ && prettier --log-level warn --write src/ tests/",
    "tsc": "tsc",
    "checks": "echo 'linter running..' && npm run lint && echo 'type check running..' && tsc",
    "test": "vitest --run"
  },
  "dependencies": {
    "@fastify/middie": "^9.0.2",
    "@fastify/static": "^8.0.2",
    "@preact/signals": "^1.3.0",
    "fastify": "^5.1.0",
    "preact": "^10.24.3",
    "preact-iso": "^2.8.1"
  },
  "devDependencies": {
    "@expo/devcert": "^1.1.4",
    "@preact/preset-vite": "^2.9.1",
    "@testing-library/preact": "^3.2.3",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitest/browser": "^2.0.3",
    "eslint": "^8.57.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-import-x": "^4.3.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-no-closure": "^1.0.1",
    "playwright": "^1.45.2",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "string-hash": "^1.1.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-preload": "^0.4.2",
    "vite-plugin-sass-dts": "^1.3.29",
    "vitest": "^2.0.3",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-push": "npm run checks"
  },
  "eslintConfig": {
    "extends": [
      "preact",
      "plugin:jsx-a11y/recommended",
      "plugin:import-x/recommended",
      "plugin:css-modules/recommended"
    ],
    "plugins": [
      "jsx-a11y",
      "css-modules",
      "no-closure"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "no-closure/no-tagged-closures": "error",
      "import-x/extensions": [
        "error",
        {
          "js": "never",
          "jsx": "never",
          "svg": "always",
          "png": "always"
        }
      ],
      "css-modules/no-unused-class": [
        "error",
        {
          "camelCase": true
        }
      ],
      "css-modules/no-undef-class": [
        "error",
        {
          "camelCase": true
        }
      ],
      "react-hooks/exhaustive-deps": "off",
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    },
    "settings": {
      "import-x/extensions": [
        ".js",
        ".jsx"
      ],
      "import-x/resolver": {
        "node": true,
        "alias": {
          "map": [
            [
              "~",
              "./src"
            ],
            [
              "react",
              "preact/compat"
            ],
            [
              "react-dom",
              "preact/compat"
            ]
          ],
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      },
      "jest": {
        "version": 27
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  }
}
